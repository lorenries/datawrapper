{% use "theme-core.twig" %}

{{ block('chart_head_no_fs') }}

<link href="https://css.washingtonpost.com/wp-srv/graphics/templates/mobile/css/fonts.min.css" rel="stylesheet">
<!--[if IE]>
    <link rel="stylesheet" href="https://css.washingtonpost.com/wp-srv/graphics/templates/mobile/css/iefonts.css" type="text/css" charset="utf-8" />
<![endif]-->

<div id="chart"></div>

<div id="footer">
    {% if not plain %}
        <div class="footer-left">
            <div class="toggleable-panel">
                {% if source %}
                    <span data-src="{% trans "Source: " %}" class="source-block">{% trans "Source: " %}
                    {% if sourceURL %}<a target="_blank" class="source" href="{{ sourceURL }}">{% endif %}{{ source }}{% if sourceURL %}</a>{% endif %}</span>
                {% endif %}
            </div>
        </div>
        <div class="footer-right">
            <span class="byline">The Washington Post</span>
        </div>
        <div class="toggleable-panel-overlay"></div>
    {% endif %}
</div>
